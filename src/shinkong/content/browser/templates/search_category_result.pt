<img src="${view/result/absolute_url}/@@images/image/preview" alt="">
<h2>${view/result/Title}</h2>
<h4>${view/result/description}</h4>

<div class="col-md-12">
    <div class="row">
        <div tal:repeat="child view/result/getChildNodes" class='childContainer col-md-12'>
            <img src="${child/absolute_url}/@@images/image/mini" class='col-md-4'>
            <div class="col-md-8 content">
                <h3>${child/Title}</h3>
                <p>${child/description}</p>
            </div>
        </div>
    </div>
</div>