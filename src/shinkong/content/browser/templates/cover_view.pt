<script>
$(function(){
        $('#youtube_select li').click(function(){
            id = $(this).data()['id']
            $(this).find('.dot').addClass('dot_select')
            $(this).siblings().find('.dot').removeClass('dot_select')

            $('#' + id).siblings().fadeOut()
            setTimeout(function(){
                $('#' + id).fadeIn()
            }, 400)
        })
})
</script>

</metal:content-core>
</metal:content-core>

</body>
</html>
