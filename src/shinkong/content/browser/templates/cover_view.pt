<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    xmlns:v-on="http://vuejs.org"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="gct.content">
<body>
<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">
<style>
#content header, #viewlet-below-content{
    display: none;
}
#content{
    position: relative;
    margin: 0;
}
#youtube_list{
    position: relative;
    padding: 10px;
}
#youtube_select{
    text-align: center;
}
#youtube_select li{
    display: inline;
    font-size: 22px;    
}
iframe{
    width: 96%;
    height: 450px;
}
.row{
}

#main-container{
    background: #ccc;
}
.polyester_container, .product_container, .banner_container, footer{
    padding: 15px 8px;
    background: #fff;
    border-radius: 8px;
    margin: 10px 0;
}
footer{
    margin-top: 10px;
    margin-bottom: 0;
}
footer.row{
    display: none;
}
.dot{
    background: black;
    color: black;
    border-radius: 100%;
    padding: 0px 7px;
    cursor: pointer;
}
.dot_select{
    background: red !important;
    color: red !important;
}
</style>
<div class="row banner_container">
   <div class="col-lg-8 col-sm-12" style='text-align: center'>
     <div id='youtube_list'>
       <tal:rep repeat="youtube view/youtubeList">
         <div tal:define="number repeat/youtube/number" id='youtube${number}' 
              class="${python: 'hide'  if number > 1 else ''}">
           <p tal:replace="structure python: youtube.getObject().remoteUrl"></p>
         </div>
       </tal:rep>
     </div>
     <ul id='youtube_select'>
       <li tal:repeat="youtube view/youtubeList" data-id="youtube${repeat/youtube/number}">
         <span tal:define="number repeat/youtube/number" class="${python: 'dot' if number > 1 else 'dot dot_select'}">a</span>
       </li>
     </ul>
   </div>
   <div class="col-lg-4 col-sm-12">
      <div class="col-lg-12 col-sm-6 right_banner">
        <a href="${portal_url}/search_product_view">
           <img src="https://via.placeholder.com/430x240" alt="">
        </a>
      </div>
      <div class="col-lg-12 col-sm-6 right_banner">
        <a href="${portal_url}/search_polyester_view">
           <img src="https://via.placeholder.com/430x240" alt="">
        </a>
      </div>
   </div>
</div>


<div class="row product_container">
  <div class="col-lg-3 col-sm-6" tal:repeat="item python: view.cover.getObject().application" style='text-align: center'>
    <a href="${portal_url}/search_product_view?uid=${python: item.to_object.UID()}">
      <img src="${item/to_object/absolute_url}/@@images/image" style='height:260px;margin-bottom: 10px'><h3>${item/to_object/Title}</h3>
    </a>
  </div>
</div>

<div class="row polyester_container">
  <div class="col-lg-3 col-sm-6" tal:repeat="item python: view.cover.getObject().polyester" style='padding: 10px'>
    <a data-fancybox href="${python: item.to_object.absolute_url()}/@@images/dm/preview" class='polyester_result'>
        <img src="${python: item.to_object.absolute_url()}/@@images/cover/preview" style='width: 100%'>
    </a>
  </div>
</div>

